<plugin plugin="qcadooDictionaries" group="framework" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:security="http://schema.qcadoo.org/modules/security" xsi:schemaLocation="
		http://schema.qcadoo.org/plugin 
		http://schema.qcadoo.org/plugin.xsd 
		http://schema.qcadoo.org/modules/model 
		http://schema.qcadoo.org/modules/model.xsd 
		http://schema.qcadoo.org/modules/view 
		http://schema.qcadoo.org/modules/view.xsd 
		http://schema.qcadoo.org/modules/localization 
		http://schema.qcadoo.org/modules/localization.xsd 
		http://schema.qcadoo.org/modules/security 
	    http://schema.qcadoo.org/modules/security.xsd 
		http://schema.qcadoo.org/modules/menu 
		http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>Qcadoo Dictionaries Management</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
		<description>Qcadoo plugin is Qcadoo framework plugin which adds dictionaries functionality to system.</description>
		<license>AGPL</license>
	</information>
	

	<dependencies>
		<dependency>
			<plugin>qcadooView</plugin>
			<version>[0.4.1</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<menu:menu-item name="dictionaries" category="administration"
			view="dictionariesList" />
			
		<model:model-hook model="dictionaryItem" plugin="qcadooModel">
			<model:onCopy method="onCopy" class="com.qcadoo.plugins.dictionaries.internal.hooks.DictionaryItemHooks" />
		</model:model-hook>

		<view:view resource="view/dictionariesList.xml" />
		<view:view resource="view/dictionaryDetails.xml" />
		<view:view resource="view/dictionaryItemDetails.xml" />
		
		<security:role identifier="ROLE_DICTIONARY_VIEW"/>
	</modules>

</plugin>