<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://schema.qcadoo.org/modules/localization" xmlns="http://schema.qcadoo.org/modules/localization" elementFormDefault="qualified">

	<xs:element name="translation">
		<xs:complexType>			
			<xs:attribute name="path" type="xs:string" use="required" />
			<xs:attribute name="basename" type="xs:string" use="optional" default="*" />
		</xs:complexType>
	</xs:element>
	
	<xs:element name="translation-group">
		<xs:complexType>			
			<xs:attribute name="name" type="xs:string" use="required" />
			<xs:attribute name="prefix" type="xs:string" use="required" />
		</xs:complexType>
	</xs:element>
	
	<xs:element name="translation-locale">
		<xs:complexType>			
			<xs:attribute name="locale" type="xs:language" use="required" />
			<xs:attribute name="label" type="xs:string" use="required" />
		</xs:complexType>
	</xs:element>
	
</xs:schema>