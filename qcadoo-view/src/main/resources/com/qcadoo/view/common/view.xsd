<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://schema.qcadoo.org/common/view" xmlns="http://schema.qcadoo.org/common/view">

    <xs:complexType name="listenerType">
        <xs:complexContent>
            <xs:extension base="hookType">
                <xs:attribute name="event" type="xs:string" use="required"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="hookType">
        <xs:attribute name="class" use="required">
            <xs:simpleType>
                <xs:restriction>
                    <xs:pattern value="[a-z][a-z0-9.]*.[a-zA-Z0-9]+"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="method" type="identifierType" use="required"/>
    </xs:complexType>

    <xs:simpleType name="enabledAttribute">
        <xs:restriction>
            <xs:enumeration value="true"/>
            <xs:enumeration value="false"/>
            <xs:enumeration value="never"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="identifierType">
        <xs:restriction>
            <xs:pattern value="[a-z][a-zA-Z0-9]*"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>