<model name="alert" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <text name="message"/>
        <enum name="type" values="alert,success,error,warning,information,confirm" default="information"
              required="true"/>
        <hasMany name="viewedAlerts" joinField="alert" model="viewedAlert"
                 cascade="delete"/>
        <datetime name="expirationDate"/>
        <boolean name="sound" default="false"/>
    </fields>
    <hooks/>
</model>