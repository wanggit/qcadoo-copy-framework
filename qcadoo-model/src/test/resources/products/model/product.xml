<model name="product" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true" />
		<string name="name" required="true">
			<validatesLength max="512" />
		</string>
		<string name="changeableName" />
		<enum name="enum" values="one,two" />
		<integer name="quantity">
			<validatesRange from="0" exclusively="true" />
		</integer>
		<dictionary name="category" dictionary="categories" />
		<hasMany name="components" model="component" joinField="product"
			cascade="delete" />
		<hasMany name="parts" model="part" joinField="product"
			cascade="delete" />
		<manyToMany name="partsManyToMany" model="part" plugin="products" joinField="products" copyable="true" cascade="delete" />
		<manyToMany name="lazyManyToMany" model="versionableEntity" plugin="products" joinField="products" copyable="true" cascade="delete" lazy="true"/>
		<string name="readOnly" readonly="true" />
	</fields>
	<hooks>
		<onCopy class="com.qcadoo.model.integration.VerifyHooks" method="onCopy"/>
		<onCreate class="com.qcadoo.model.integration.VerifyHooks" method="onCreate"/>
		<onSave class="com.qcadoo.model.integration.VerifyHooks" method="onSave"/>
		<onUpdate class="com.qcadoo.model.integration.VerifyHooks" method="onUpdate"/>
		
		<onCopy class="com.qcadoo.model.integration.VerifyHooks" method="changeReadOnlyFieldOnCopy"/>
		<onCreate class="com.qcadoo.model.integration.VerifyHooks" method="changeReadOnlyFieldOnCreate"/>
		<onSave class="com.qcadoo.model.integration.VerifyHooks" method="changeReadOnlyFieldOnSave"/>
		<onUpdate class="com.qcadoo.model.integration.VerifyHooks" method="changeReadOnlyFieldOnUpdate"/>
	</hooks>
</model>